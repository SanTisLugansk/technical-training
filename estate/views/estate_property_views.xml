<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_tree_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1>
                        <field name="name"/>
                    </h1>
                </header>
                <h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                </h1>
                <group col="2">
                    <group>
                        <field name="property_type_id"/>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                    </group>
                    <group>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group col="1">
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="state"/>
                        </group>
                    </page>
                    <page string="Offers">
                        <!--
                        <group col="1">
                            <field name="offer_ids" nolabel="1" widget="one2many_tags"/>
                        </group>
                        -->
                        <field name="offer_ids" widget="one2many_tags"/>
                    </page>
                    <page string="Other info">
                        <group>
                            <field name="salesman"/>
                            <field name="buyer"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Type"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter string="Available by Date" name="date_availability" domain="[('date_availability','&lt;=',datetime.date.today().strftime('%Y-%m-%d'))]"/>
                <filter string="Available" name="state" domain="['|',('state','=','new'),('state','=','offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
