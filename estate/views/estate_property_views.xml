<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_tree_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state': True}</field>
    </record>

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ('offer_received', 'offer_accepted')"
                  decoration-bf="state == 'offer_accepted'"
                  decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode" optional="show"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" invisible="0"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_kanban_action" model="ir.actions.act_window">
        <field name="name">Properties kanban</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="estate_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <div>
                                Expected price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.best_price.raw_value > 0">
                                Best price: <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'sold'">
                                Selling price: <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_do_sold" type="object" string="Sold"
                            attrs="{'invisible': ['|', ('state', '==', 'sold'), ('state', '==', 'canceled')]}"/>
                    <button name="action_do_cancel" type="object" string="Cancel"
                            attrs="{'invisible': ['|', ('state', '==', 'sold'), ('state', '==', 'canceled')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,offer_received,offer_accepted,sold"
                           options="{'clickable': '1'}"
                           attrs="{'invisible': [('state', 'in', ('sold','canceled'))]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,offer_received,offer_accepted,sold"
                           attrs="{'invisible': ['&amp;', ('state', '!=', 'sold'), ('state', '!=', 'canceled')]}"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <newline/>
                    <group col="5">
                        <div class="o_row" colspan="5">
                            <h1 colspan="4">
                                <field name="tag_ids" widget="many2many_tags" colspan="4"  options="{'color_field': 'color'}"/>
                            </h1>
                        </div>
                    </group>
                    <newline/>
                    <group col="2">
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group col="1">
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '==', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '==', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <!--
                            <group col="1">
                                <field name="offer_ids" nolabel="1" widget="one2many_tags"/>
                            </group>
                            -->
                            <field name="offer_ids" widget="one2many_tags"
                                   attrs="{'readonly': ['|','|', ('state', '==', 'offer_accepted'), ('state', '==', 'sold'), ('state', '==', 'canceled')]}"/>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesman"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Type"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area' , '>=', self)]"/>
                <field name="facades"/>
                <filter string="Available by Date" name="date_availability" domain="[('date_availability','&lt;=',datetime.date.today().strftime('%Y-%m-%d'))]"/>
                <separator/>  <!-- without a separator between filters is used OR, with a separator - AND -->
                <filter string="Available" name="state" domain="['|', ('state','=','new'), ('state','=','offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
